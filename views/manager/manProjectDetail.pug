extends ../layout

//- 경영진 프로젝트 상세페이지
block content
  div.mr-3.ml-3
    h1.text-center.mt-5 프로젝트 상세
    section.fdb-block.fp-active(data-block-type="contents" data-id="1" draggable="true")
      .container
        .row.text-left.align-items-center.mt-3
          .col
            h3
              strong 프로젝트명
                p.text-h3 #{currentProj.project_name}
          .col
            h3
              strong 프로젝트 착수일자
                p.text-h3 #{currentProj.proj_start_date}
          .col
            h3
              strong 프로젝트 종료일자 
                p.text-h3 #{currentProj.proj_end_date}
          .col
            h3
              strong 발주처
                p.text-h3 #{currentProj.project_organization}
          .col
            h3
              strong 예산
                p.text-h3 #{currentProj.budget}
                    
      a.btn.btn-black.btn-empty(href=`/manager/project/${currentProj.id}/update`, style='float: right') 수정
      .row.mt-4
       h2.ml-3.mt-5 참여 직원 수
        p.text-h3.ml-3 #{employeeList.length}
      h2.ml-3.mt-5 참여 직원
      .row.align-items-center.mt-2
        .col
          table.table.text-center
            thead.thead-light
              tr 
                th(scope="col") 이름
                th(scope="col") 직무
                th(scope="col") 프로젝트 참여일
                th(scope="col") 프로젝트 종료일
            tbody
              each value in employeeList
                tr 
                  td #{value.Employee.emp_name}
                  td #{value.Role.role_name}
                  td #{value.part_start_date}
                  td #{value.part_end_date}